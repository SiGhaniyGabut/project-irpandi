<div class="m-auto flex flex-col w-full max-w-md gap-10" data-controller="register" data-register-minimum-password-value="<%= @minimum_password_length %>">
  <header class="mt-auto">
      <h1 class="font-medium text-3xl mb-3">Daftar</h1>
      <p>Mari jelajahi keindahan alam Talalang Jaya</p>
  </header>

  <%= form_with(model: User, url: registration_path(resource_name), class: "flex flex-col gap-3", data: { turbo: "false" }) do |f| %>
    <input type="hidden" name="user[password_confirmation]" data-register-target="passwordConfirmationInput">
    
    <div>
      <%= f.label :username, 'Nama Lengkap', class: "block mb-2" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full p-2 rounded-md text-black focus:ring-2 focus:ring-orange-500 border-0", placeholder: 'John Doe' %>
    </div>

    <div>
      <%= f.label :email, class: "block mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-md text-black focus:ring-2 focus:ring-orange-500 border-0", placeholder: 'john@doe.com' %>
    </div>

    <div data-register-target="passwordField">
      <div class="flex gap-3">
        <%= f.label :password, class: "block mb-2" %>
        <p data-register-target="passwordValidityMessage" class="hidden text-red-400"></p>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded-md text-black focus:ring-2 focus:ring-orange-500 border-0", 'data-register-target' => 'passwordInput', placeholder: 'Minimal password 6 karakter' %>
    </div>
    <hr>
    <div class="mt-3">
      <%= f.submit "Daftar", class: "w-full p-2 rounded-md text-white font-semibold hover:cursor-pointer hover:bg-orange-400 bg-orange-500" %>
    </div>
  <% end %>
  <div>
      <p class="text-white">Sudah punya akun? <%= link_to 'Silahkan Masuk.', new_user_session_path, class: 'underline hover:text-orange-400' %></p>
  </div>
</div>