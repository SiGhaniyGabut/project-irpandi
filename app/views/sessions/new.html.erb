<div class="m-auto w-full max-w-md flex flex-col gap-10">
    <header>
        <h1 class="font-medium text-3xl mb-3">Masuk</h1>
        <p>Yuk mulai nikmati keindahan alam Talalang Jaya</p>
    </header>

    <%= form_with(model: User, url: session_path(resource_name), data: { turbo: "false" }, class: "flex flex-col gap-3") do |f| %>
        <div>
            <%= f.label :email, class: "block mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded-md text-black focus:ring-2 focus:ring-orange-500 border-0", placeholder: 'Masukkan email Anda' %>
        </div>
        <div>
            <%= f.label :password, class: "block mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded-md text-black focus:ring-2 focus:ring-orange-500 border-0", placeholder: 'Masukkan password Anda' %>
        </div>
        <div class="text-sm flex">
            <%= f.check_box :remember_me, class: "rounded-md p-2 my-auto mr-3 border-black border-0 focus:ring-2 focus:ring-orange-500 focus:ring-offset-0 checked:bg-orange-500" %>
            <%= f.label :remember_me, 'Ingat Saya' %>
        </div>
        <hr>
        <div class="mt-3">
            <%= f.submit "Masuk", class: "w-full p-2 rounded-md text-white font-semibold hover:cursor-pointer hover:bg-orange-400 bg-orange-500" %>
        </div>
    <% end %>
    <div>
        <p class="text-white">Belum punya akun? <%= link_to 'Daftar disini.', new_user_registration_path, class: 'underline hover:text-orange-400' %></p>
    </div>
