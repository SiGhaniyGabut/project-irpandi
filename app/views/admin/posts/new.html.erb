<main class="p-5">
    <section class="text-justify pb-5">
        <div class="title text-2xl font-bold mb-5 flex justify-between" id="profile">
            <h1>Buat Informasi Baru</h1>
            <%= button_to 'Kembali', admin_posts_path, class: "text-sm font-semibold text-white py-2 px-3 bg-orange-400 hover:bg-orange-300", method: :get%>
        </div>

        <%= form_with(model: @post, url: admin_posts_path, class: "wrapper flex flex-wrap justify-between gap-5") do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="w-full md:max-w-2xl">
                <div class="field">
                    <%= f.rich_text_area :content, class: "max-h-full" %>
                </div>
            </div>

            <div class="w-full max-w-sm flex flex-col gap-3" data-controller="posts">
                <div class="flex flex-col gap-3">
                    <%= f.label :image, 'Gambar Utama' %>
                    <%= f.file_field :image %>
                </div>
                <div class="flex flex-col gap-3">
                    <%= f.label :title, 'Judul Informasi' %>
                    <%= f.text_field :title, "data-posts-target": "title" %>
                </div>
                <div><%= f.submit 'Simpan dan Publikasi', class: 'w-full font-semibold text-white py-2', "data-posts-target": "postButton" %></div>
            </div>
        <% end %>
    </section>
</main>